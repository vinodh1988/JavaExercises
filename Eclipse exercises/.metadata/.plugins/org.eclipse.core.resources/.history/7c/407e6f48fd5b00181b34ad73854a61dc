	   Locale l2=new Locale("hi","IN");
	   Locale l3=new Locale("ta","IN");
	   
	   Scanner s=new Scanner(System.in);
	   System.out.println("Language 1.English 2.Hindi 3.Tamil 4.French");
	   System.out.println("Enter your language choice");
	   
	   
   }
}
